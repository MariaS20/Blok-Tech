<!DOCTYPE html>
<%- include('head.ejs') %>
    <body>
            <main>
                <h1>Ben je er zeker van je antwoord?</h1>
    
                <form action=/updateAnswer method='POST' class='food-form'>
                    <div class='food-choice'>
                        <label class='form-label'>
                        <input class='choice1' type='radio' name='food1' value='<%= formData.imageSet1[0].name %>' <% if (formData.imageSet1[0].selected) { %> checked <% } %> required>
                            <img src=<%= formData.imageSet1[0].imageUrl %>>
                        </label>
                        <label class='form-label'>
                            <input type='radio' name='food1' value='<%= formData.imageSet1[1].name %>'' <% if (formData.imageSet1[1].selected) { %> checked <% } %>>
                            <img src=<%= formData.imageSet1[1].imageUrl %>>
                        </label>
                    </div>
                    <div class='food-choice'>
                        <label class='form-label'>
                            <input class='choice1' type='radio' name='food2' value='<%= formData.imageSet2[0].name %>' <% if (formData.imageSet2[0].selected) { %> checked <% } %> required>
                            <img src=<%= formData.imageSet2[0].imageUrl %>>
                        </label>
                        <label class='form-label'>
                            <input type='radio' name='food2' value='<%= formData.imageSet2[1].name %>' <% if (formData.imageSet2[1].selected) { %> checked <% } %>>
                            <img src=<%= formData.imageSet2[1].imageUrl %>>
                        </label>
                    </div>
                    <div class='food-choice'>
                        <label class='form-label'>
                            <input class='choice1' type='radio' name='food3' value='<%= formData.imageSet3[0].name %>' <% if (formData.imageSet3[0].selected) { %> checked <% } %> required>
                            <img src=<%= formData.imageSet3[0].imageUrl %>>
                        </label>
                        <label class='form-label'>
                            <input type='radio' name='food3' value='<%= formData.imageSet3[1].name %>'' <% if (formData.imageSet1[0].selected) { %> checked <% } %>>
                            <img src=<%= formData.imageSet3[1].imageUrl %>>
                        </label>
                    </div>
                
                    <button type='submit'>
                        Update antwoord
                    </button>
                    <a class='button' href='http://localhost:8000/matches'>Bekijk jouw matches</a>
                </form>
                
            </main>
        <%- include('tail.ejs') %>
    </body>
    <script src='../public/script/steps.js'></script>
</html>